<Window x:Class="PageKeeper.BrowserError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageKeeper"
        mc:Ignorable="d"
        KeyUp="Window_KeyUp"
        Title="BrowserError" Height="194" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" BorderBrush="Black" BorderThickness="1" AllowsTransparency="True" ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <Window.Background>
        <SolidColorBrush Color="#FF5D5D5D" Opacity="0.8"/>
    </Window.Background>
    <StackPanel Margin="5">
        <Label Name="lblError">
            <TextBlock Name="txtError" Text="Error!. . . ." TextWrapping="Wrap" Height="165" Width="280" FontSize="18" Foreground="White" FontWeight="SemiBold" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
        </Label>
    </StackPanel>
</Window>
